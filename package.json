{
  "name": "gistfs",
  "displayName": "GistPad",
  "description": "Manage your code snippets and developer notes using GitHub Gists and repositories.",
  "publisher": "vsls-contrib",
  "version": "0.9.3",
  "extensionKind": [
    "ui",
    "workspace"
  ],
  "icon": "images/icon.png",
  "repository": {
    "type": "git",
    "url": "https://github.com/lostintangent/gistpad"
  },
  "bugs": {
    "url": "https://github.com/lostintangent/gistpad/issues"
  },
  "homepage": "https://github.com/lostintangent/gistpad#readme",
  "license": "MIT",
  "engines": {
    "vscode": "^1.101.0"
  },
  "categories": [
    "Other"
  ],
  "keywords": [
    "gist",
    "snippets",
    "wiki",
    "notes",
    "language-model-tools"
  ],
  "activationEvents": [
    "onFileSystem:gist",
    "onFileSystem:repo",
    "onStartupFinished",
    "onUri"
  ],
  "main": "./dist/extension.js",
  "browser": "./dist/extension-web.js",
  "contributes": {
    "configuration": {
      "type": "object",
      "title": "GistPad",
      "properties": {
        "gistpad.autoSave": {
          "default": "off",
          "type": "string",
          "enum": [
            "off",
            "afterDelay",
            "onFocusChange"
          ],
          "enumDescriptions": [
            "Auto-save is disabled",
            "Auto-save files after a configured delay",
            "Auto-save files when focus moves away from the editor"
          ],
          "description": "Controls auto-saving of gist files. Defaults to off."
        },
        "gistpad.autoSaveDelay": {
          "default": 5000,
          "type": "number",
          "minimum": 1,
          "description": "Configure the delay in milliseconds after which a dirty file is saved automatically. Only applies when 'gistpad.autoSave' is set to 'afterDelay'. Defaults to 1000."
        },
        "gistpad.comments.showThread": {
          "default": "whenNotEmpty",
          "type": "string",
          "enum": [
            "always",
            "never",
            "whenNotEmpty"
          ],
          "description": "Specifies when to display the comment thread when you open a Gist file."
        },
        "gistpad.cloneDirectory": {
          "default": "gistId",
          "enum": [
            "gistId",
            "description",
            "prompt"
          ],
          "description": "Specifies how to name the directory when cloning a gist repository. 'gistId' uses the default behavior, 'description' uses the gist description if available (falling back to gistId), 'prompt' asks for a custom name."
        },
        "gistpad.images.directoryName": {
          "default": "images",
          "type": "string",
          "description": "Specifies the name of the directory that pasted images are uploaded to."
        },
        "gistpad.images.markdownPasteFormat": {
          "default": "markdown",
          "enum": [
            "html",
            "markdown"
          ],
          "description": "Specifies the markup format to use when pasting an image into a markdown gist file."
        },
        "gistpad.images.pasteType": {
          "default": "file",
          "enum": [
            "base64",
            "file"
          ],
          "description": "Specifies the upload method to use when pasting an image into a gist file."
        },
        "gistpad.mcp.enabled": {
          "default": "true",
          "type": "boolean",
          "description": "Specifies whether to enable the MCP server for GistPad. Defaults to true."
        },
        "gistpad.mcp.markdownOnly": {
          "default": "false",
          "type": "boolean",
          "description": "Specifies whether to filter the gists that the MCP server returns, to only those that contain markdown. Defaults to false."
        },
        "gistpad.output": {
          "default": false,
          "type": "boolean",
          "description": "Specifies whether or not to enable the output channel for tracing."
        },
        "gistpad.dailyNotes.directoryFormat": {
          "default": "",
          "type": "string",
          "description": "Specifies the moment.js format string to use when generating new daily notes."
        },
        "gistpad.dailyNotes.fileFormat": {
          "default": "YYYY-MM-DD",
          "type": "string",
          "description": "Specifies the moment.js format string to use when generating new daily notes."
        },
        "gistpad.dailyNotes.fileExtension": {
          "default": ".md",
          "type": "string",
          "description": "Specifies the file extension to use when generating new daily notes."
        },
        "gistpad.dailyNotes.show": {
          "default": true,
          "type": "boolean",
          "description": "Specifies whether or not to display the daily notes node in the gists tree view."
        },
        "gistpad.showcaseUrl": {
          "default": "https://aka.ms/gistpad-showcase",
          "type": "string",
          "description": "Specifies the URL of the showcase to display gists from."
        },
        "gistpad.syncOnSave": {
          "default": true,
          "type": "boolean",
          "description": "Specifies whether to automatically sync a file with GitHub when saving it. Defaults to true."
        },
        "gistpad.treeIcons": {
          "default": "true",
          "type": "boolean",
          "description": "Specifies whether to show the gist type icons in the gists tree."
        },
        "gistpad.wikis.daily.directoryName": {
          "default": "Daily",
          "type": "string",
          "description": "Specifies the name of the directory that daily pages are organized within."
        },
        "gistpad.wikis.daily.titleFormat": {
          "default": "LL",
          "type": "string",
          "description": "Specifies the date format (using Moment.js syntax) that is used to for the title of daily pages."
        },
        "gistpad.wikis.daily.filenameFormat": {
          "default": "YYYY-MM-DD",
          "type": "string",
          "description": "Specifies the date format (using Moment.js syntax) that is used to for the filename of daily pages."
        }
      }
    },
